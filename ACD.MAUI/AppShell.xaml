<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ACD.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ACD.MAUI"
    xmlns:views="clr-namespace:ACD.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ACD.MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Management"
        ContentTemplate="{DataTemplate views:InventoryManagementView}"
        Route="Management" />

    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="Shop" />

</Shell>
